<!--pages/me_edit/me_edit.wxml-->

  <text>\n</text>
  <van-field
    value="{{ realName }}"
    required
    icon="manager-o"
    label="真实姓名："
    placeholder="请输入真实姓名"
    bind:change="change1"
  />

  <text>\n</text>
  <picker mode="date"
          value="{{date}}"
          start="1900-01-01"
          end="2020-01-01"
          bindchange="bindDateChange">
      <van-field
        value="{{ date}}"
        label="出生日期："
        icon="records"
        placeholder="请选择您的出生日期"
        bind:change="change2"
      />
  </picker>


  <text>\n</text>
  <van-field
    value="{{ job }}"
    label="职业："
    placeholder="请输入职业"
    icon="flower-o"
    bind:change="change3"
  />


  <text>\n</text>
  <van-field
  custom-style="height:100px"  
    value="{{signature}}"
    border="{{a}}"
    label="个性签名："
    type="textarea"
    placeholder="请输入个性签名"
    autosize
    bind:change="change4"
  />


<view class='bottomButton'>
  <van-button slot="button" size="large" type="primary" icon="success" color="#ff9966" is-link bind:click="showtip">
    保存
  </van-button>
</view>


