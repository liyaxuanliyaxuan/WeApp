/* pages/record_write/record_write.wxss */

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.picture{

  z-index: 2;

  width:20%;
 
}
.divider{
  margin-top:12%;
}
.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}
.chosen{
  background: 
#F5F5DC;
}
.team-name{
  color:#696969;
  font-size:12px ;
  margin-top: 30px;
  margin-left: 10px;

}
.team-pic{
  width: 160%;
  height: 160%;
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}
.input-area{
  min-height: 100px;
}
.background{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.image{
  display:flex;                    
  justify-content: center; 
}
